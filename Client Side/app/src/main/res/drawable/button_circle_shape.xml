<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <!-- 填充的颜色 -->
            <solid android:color="#BEECE9" />
            <!-- android:radius 弧形的半径 -->
            <!-- 设置按钮的四个角为弧形 -->
            <corners
                android:radius="1dip" />
            <!--也可单独设置-->
            <!-- <corners -->
            <!-- android:topLeftRadius="10dp"-->
            <!-- android:topRightRadius="10dp"-->
            <!-- android:bottomRightRadius="10dp"-->
            <!--  android:bottomLeftRadius="10dp"-->
            <!--   />  -->
            <gradient
            android:angle="90"
            android:startColor="#4EA4AD"
            android:endColor="#C2F3EE"
            />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
                />
            <stroke android:width="1dp" android:color="#FFFFFF" />
        </shape>
    </item>
<item android:state_pressed="true">
    <shape
        android:shape="rectangle">
        <!-- 填充的颜色 -->
        <solid android:color="#009688" />
        <!-- android:radius 弧形的半径 -->
        <!-- 设置按钮的四个角为弧形 -->
        <corners
            android:radius="10dip" />
        <!--也可单独设置-->
        <!-- <corners -->
        <!-- android:topLeftRadius="10dp"-->
        <!-- android:topRightRadius="10dp"-->
        <!-- android:bottomRightRadius="10dp"-->
        <!--  android:bottomLeftRadius="10dp"-->
        <!--   />  -->
        <gradient
            android:angle="90"
            android:startColor="#026875"
            android:endColor="#009688"
            />
        <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp"
            />
        <stroke android:width="2dp" android:color="#E91E63" />
    </shape>
</item>

</selector>