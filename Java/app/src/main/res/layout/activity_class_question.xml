<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/Globalbackground"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".Class_question">
<!--点击追加回答进入answer，点击查看详细完整展示该问题进入full_display_a_answer-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/class_name"
        android:textSize="26sp"
        android:gravity="center"
        android:background="#009688"
        android:hint="课程名字"
        android:id="@+id/classname"/>
<Button
    android:id="@+id/answer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="追加回答"
    android:layout_alignParentEnd="true"
    android:layout_below="@id/classname"
    android:textSize="20dp"
    android:textColor="#0E998C"
    android:background="#ffff"/>
    <!--回答可以滚动-->
    <ScrollView
        android:layout_below="@id/answer"
        android:background="@mipmap/scrollbacground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_above="@id/menu">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/questions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/QUESTION"
                android:textSize="20sp"
                android:textStyle="bold"
                android:hint="显示问题,完整显示








"
                android:layout_marginBottom="20dp"
                android:background="#4AABC3"
                />
            <!--问题展示-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/number1"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="#FF5722"/>
                <TextView
                    android:id="@+id/Q1"
                    android:background="#9B9696"
                    android:text="@string/class_answer1"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="示例："
                    />
            </LinearLayout>
            <!--回答和显示按钮-->
            <Button
                    android:layout_gravity="right"
                    android:id="@+id/answer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#009688"
                    android:layout_marginBottom="30dp"
                    android:textSize="20dp"
                    android:text="查看详细"
                    />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/number2"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="#FF5722"/>
                <TextView
                    android:id="@+id/Q2"
                    android:background="#9B9696"
                    android:text="@string/question2"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="示例：
回答：----------------------------------------------------------------------------------------------------
----------------
点击右下按钮显示该题目提问者提供的图片，若点击无图片则不显示，将提示无图片"
                    />
            </LinearLayout>
            <!--回答和显示按钮-->
            <Button
                android:layout_gravity="right"
                android:id="@+id/answer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#009688"
                android:layout_marginBottom="30dp"
                android:textSize="20dp"
                android:text="查看详细"
                />
        </LinearLayout>
    </ScrollView>

    <!--底部导航栏-->
    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/first_layout"
                android:layout_width="60dp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/first"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/first"
                    />

                <TextView
                    android:textColor="#FFFFFF"
                    android:id="@+id/home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Home" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/second_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/second"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/three"
                    />

                <TextView
                    android:textColor="#FFFFFF"
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Index" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/three_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/three"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/three"
                    />

                <TextView
                    android:textColor="#FFFFFF"
                    android:id="@+id/message_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Mytopic" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/four_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/four"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/four"
                    />

                <TextView
                    android:textColor="#FFFFFF"
                    android:id="@+id/star"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Question" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/five_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/five"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/five"
                    />

                <TextView
                    android:textColor="#FFFFFF"
                    android:id="@+id/question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="MySave" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>